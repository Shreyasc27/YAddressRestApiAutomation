pipeline {
    agent any 
    stages {
        stage('Clean') { 
            steps {
                bat 'mvn clean' 
            }
        }
		stage('Test') { 
            steps {
                bat 'mvn test' 
            }
        }
    }
	post {
		always {
			archiveArtifacts artifacts: 'target/surefire-reports/*.*', 
			onlyIfSuccessful: true
		}
	}
}